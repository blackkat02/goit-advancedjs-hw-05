{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ES2021"],
    "module": "es2020",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strict": true, // ✅ Added strict mode
    "forceConsistentCasingInFileNames": true, // ✅ Added consistent casing check
    "target": "es2019"
  },
  "include": ["**/*.ts"]
}
